@model IEnumerable<FoodProject.Models.Food>

@{
    ViewBag.Title = "AddIngredient";
}

<h2>Add Ingredient to Recipe</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Units)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Units)
        </td>
        <td>
            @Html.ActionLink("Add to Recipe", "Index", new { id=item.FoodID })

        </td>
    </tr>
}

</table>
